{{#if c_descrizioneLunga}}
<div class="flex flex-wrap box_informazioni">
    <div class="w-full md:w-2/3">
        <div class="container_descrizione">
            <h2 class="mb-3 titolo_descrizione_lunga md:mb-5">Informazioni</h2>
            <div class="descrizione_lunga">
                {{convertRTFToHTML c_descrizioneLunga}}
            </div>
        </div><!-- .container_descrizione -->
    </div>
    <div class="flex flex-col justify-between w-full md:w-1/3 box_informazioni_link">
        <div class="sidebar_lista_link">
            <a class="button-text" href="{{c_baseURL}}" target="_blank"><i class="fa-solid fa-caret-right fa-xl"></i> Visita il sito della struttura</a>
            <a class="button-text" href="{{c_urlOrari}}" target="_blank"><i class="fa-solid fa-caret-right fa-xl"></i> Orari e info generali</a>
            <a class="button-text" href="{{c_urlContatti}}" target="_blank"><i class="fa-solid fa-caret-right fa-xl"></i> Scrivici</a>
            <a class="button-text button-prenota" href="{{c_urlPrenotazione}}" target="_blank"><i class="fa-solid fa-caret-right fa-xl"></i> Prenota</a>
        </div>
        <div class="dati_struttura_governance">
            {{#if c_direttoreSanitario}}
            <p><strong>Direttore sanitario:</strong> {{c_direttoreSanitario}}</p>
            {{else}}
            {{/if}}
            {{#if c_amministratoreDelegato}}
            <p><strong>Amministratore delegato:</strong> {{c_amministratoreDelegato}}</p>
            {{else}}
            {{/if}}
            {{#if c_postiLetto}}
            <p><strong>Posti Letto:</strong> {{c_postiLetto}}</p>
            {{else}}
            {{/if}}
        </div>
    </div>
</div>
{{/if}}