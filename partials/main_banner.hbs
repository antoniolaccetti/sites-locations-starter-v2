<div class="section">
    <div class="container flex flex-col md:flex-row">
        <div class="main_banner w-full md:w-2/3">
            <div class="image">
                <img src="{{c_immagineStruttura.url}}" />
            </div><!-- .image -->
        </div><!-- .main_banner -->
        <div class="main_banner_info bg-lightblue w-full md:w-1/3 py-6 px-5">
           
                <h1 class="title-narrow text-dark text-xl">{{name}}</h1>
           

            <p>{{c_descrizioneBreve}}</p>

            <a id="address" class="hover:underline" href="https://www.google.com/maps/dir/?api=1&destination={{address.line1}} {{address.city}} {{address.region}} {{address.postalCode}}" target="_blank">
                <div>{{address.line1}}</div>
                <div>{{address.city}}, {{address.region}} {{address.postalCode}}</div>
                <div>{{address.countryCode}}</div>
            </a>
            
        </div><!-- .main_banner_info -->
    </div><!-- .spacer -->
</div><!-- .main_banner_container -->