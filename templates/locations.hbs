---
{
    "stream": {
        "$id": "locations",
        "source": "knowledgeGraph",
        "destination": "pages",
        "filter" : {
            "entityTypes": [
                "healthcareFacility"
            ]
        },
        "fields": [
            "id", 
            "uid", 
            "meta",
            "name", 
            "address", 
            "mainPhone",
            "description", 
            "hours",
            "photoGallery",
            "slug",
            "c_immagineStruttura",
            "geocodedCoordinate",
            "services",
            "c_baseURL",
            "websiteUrl", 
            "neighborhood",
            "paymentOptions"
        ],
        "localization": {
            "locales": ["en"]
        }
    },
    "urlFormat": "{{slug}}"
}
---
<!DOCTYPE html>
<html lang="en">
    <head>
        {{>head }}
        <title>{{name}} - {{neighborhood}}</title>
        {{>schema}}
        <link rel="shortcut icon" type="image/jpg" href="/images/yext-favicon.png"/>
    </head>
    <body>      
            {{>header_elogic}}
            <div class="w-full">
                {{>main_banner}} 
                <div class="centered-container">
                    <div class="section">{{>locationdetails}} </div>
                    <div class="section">{{>aboutmap}} </div>
                    <div class="section">{{>nearby geocodedCoordinate}}</div>                    
                </div>
                <div class="w-full bg-gray-100">
                    <div class="centered-container">
                        {{>footer}}
                    </div>
                </div>
            </div>
    </body> 
</html>