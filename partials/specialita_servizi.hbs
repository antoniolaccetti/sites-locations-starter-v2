
<style>
    .intro {
        margin-bottom:15px;
    }
    .intro p {
        padding-left: 15px;
        font-family: pt-sans-narrow,sans-serif;
    }
    .specialita_container {
        min-height: 350px;
        padding: 15px;
        width:100%;
    }

    .col_specialita_image {
        width: 50%;
        background-size: cover;
        background-repeat: no-repeat;
    }
    .bg_white {
        background-color:#fff;
    }
    ul {
        list-style: disc;
        list-style-position: inside;
    }
    .title  {
        text-transform:uppercase;
    }
    .col_specialita_content {
        width:50%;
        display:flex;
        flex-direction:column;
        padding: 25px;
    }
    .col_specialita_content .specialita {
        width: 50%;
    }
    .col_specialita_content .servizi {
        width: 50%;
    }
    .col_specialita_content .title {
        display: block;
        font-size: 1.5rem;
        color: #23475D;
        font-weight:800;
    }
    .col_specialita_content ::marker {
        color: #23475D;
    }

    .col_specialita_content .link {
        margin-top: auto;
    }
</style>
<div class="specialita_container flex justify-center items-stretch flex-wrap">
    <div class="intro">
        <h2 class="titolo_descrizione_lunga">
            Specialità e Servizi:
            {{#if c_nomeStruttura}}
            {{c_nomeStruttura}}
            {{else}}
            {{name}}
            {{/if}}
        </h2>
        <p>Lorem ipsum dolor sit amet</p>

    </div>
    <div class="flex bg_white specialita_container">

        {{#with c_immagineSpecialita}}
        <div class="col_specialita_image" style="background-image: url('{{this.primaryPhoto.image.thumbnails.[2]}}{{url}}')"></div>
        {{/with}}

        <div class="col_specialita_content">
            <div class="flex">
                <div class="specialita">
                    <span class="title">Specialità</span>
                    {{convertRTFToHTML c_elencoSpecialitaStrutturaGVM}}
                </div>
                <div class="servizi">
                    <span class="title">Servizi</span>
                    {{convertRTFToHTML c_elencoServiziStrutturaGVM}}
                </div>
            </div>
            <div class="link">
                <a class="button-blue" href="{{c_urlTutteLeSpecialita}}" target="_blank">
                    <i class="fa-solid fa-user-md fa-xl mr-2"></i> Tutte le specialità mediche
                </a>
            </div>
        </div>

    </div>
