---
{
    "stream": {
        "$id": "locations",
        "source": "knowledgeGraph",
        "destination": "pages",
        "filter" : {
            "entityTypes": [
                "healthcareFacility",
                "ce_iniziativa"
            ]
        },
        "fields": [
            "id",
            "uid",
            "meta",
            "name",
            "address",
            "mainPhone",
            "description",
            "c_descrizioneLunga",
            "hours",
            "photoGallery",
            "slug",
            "c_immagineStruttura",
            "c_descrizioneBreve",
            "geocodedCoordinate",
            "services",
            "c_baseURL",
            "c_urlPrenotazione",
            "c_urlContatti",
            "c_urlOrari",
            "websiteUrl",
            "neighborhood",
            "paymentOptions",
            "primaryPhoto",
            "c_iniziativeCorrelate" 
        ],
        "localization": {
            "locales": ["it"]
        }
    },
    "urlFormat": "{{slug}}"
}
---
<!DOCTYPE html>
<html lang="en">
<head>
    {{>head }}
    <title>{{name}} - {{neighborhood}}</title>
    {{>schema}}
    <link rel="shortcut icon" type="image/jpg" href="/images/yext-favicon.png" />
</head>
<body class="relative">
    {{>header_elogic}}
    <div class="section">
        {{>main_banner}}

        {{>locationdetails}}
    </div>
    <div class="section">
        <div class="container">
            <div class="">{{>aboutmap}} </div>
        </div>
    </div>
    <div class="section">
        <div class="container">
            <div class="">{{>nearby geocodedCoordinate}}</div>
        </div>
    </div>
    <div class="w-full bg-gray-100">
        <div class="centered-container">
            {{>footer}}
        </div>
    </div>
</body>

</html>


