<div class="flex flex-wrap">
    <div class="w-full md:w-2/3">
        <h2 class="mb-3 titolo_descrizione_lunga md:mb-5">Informazioni</h2>
        <div class="descrizione_lunga">
            {{convertRTFToHTML c_descrizioneLunga}}
        </div>
    </div>
    <div class="sidebar_lista_link w-full md:w-1/3 md:px-8">
        <a class="button button_prenota" href="{{c_urlPrenotazioni}}"><i class="fa-solid fa-calendar-check fa-xl"></i> Prenota</a>
        <a class="button button_scrivici" href="{{c_urlContatti}}"><i class="fa-solid fa-edit fa-xl"></i> Scrivici</a>
        <a class="button button_struttura" href="{{c_urlbaseURL}}"><i class="fa-solid fa-hospital fa-xl"></i> Vai alla struttura</a>
        <a class="button button_orari" href="{{c_urlOrari}}"><i class="fa-solid fa-clock fa-xl"></i> Orari e info generali</a>
    </div>
</div>
<div class="iniziative_correlate_container flex flex-wrap">
    {{#each c_iniziativeCorrelate}}
    <div class="w-1/4 col_iniziativa">
        <a href="{{this.c_baseURL}}" target="_blank" class="col_iniziativa_link">
            <div class="col_iniziativa_image" style="background-image: url('{{#with this.primaryPhoto.image.thumbnails.[3]}}{{url}}{{/with}}');">
               <!-- {{#with this.primaryPhoto.image.thumbnails.[0]}}
                {{url}}
                {{/with}}
                {{#with this.primaryPhoto.image.thumbnails.[1]}}
                {{url}}
                {{/with}}
                {{#with this.primaryPhoto.image.thumbnails.[2]}}
                {{url}}
                {{/with}}
                {{#with this.primaryPhoto.image.thumbnails.[3]}}
                {{url}}
                {{/with}}-->
            </div>
            <h3 class="col_iniziativa_title">
                {{this.name}}
            </h3>
            <div class="col_iniziativa_description">
                {{this.c_descrizioneBreve}}
            </div>
        </a>
    </div>
    {{/each}}
</div>
