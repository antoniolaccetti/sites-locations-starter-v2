---
{
    "stream": {
        "$id": "iniziativa",
        "source": "knowledgeGraph",
        "destination": "pages",
        "filter" : {
            "entityTypes": [
                "ce_iniziativa"
            ]
        },
        "fields": [
            "name",
            "slug",
            "c_descrizioneBreve"
        ],
        "localization": {
            "locales": ["it"]
        }
    },
    "urlFormat": "{{slug}}"
}
---
<!DOCTYPE html>
<html lang="en">
<head>
    {{>head }}
    <title>{{name}}</title>
    {{>schema}}
    <link rel="shortcut icon" type="image/jpg" href="/images/yext-favicon.png" />
</head>
<body class="relative">
    {{>header_elogic}}
    {{name}}
    <div class="w-full bg-gray-100">
        <div class="centered-container">
            {{>footer}}
        </div>
    </div>
</body>

</html>


